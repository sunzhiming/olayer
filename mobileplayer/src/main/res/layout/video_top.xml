<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/ll_top"
              android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/bg_player_status"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#fff"
            android:textSize="14sp"/>
        
        <ImageView
            android:id="@+id/iv_battery"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_battery_0"/>
        <TextView
            android:id="@+id/tv_titme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#fff"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_player_top_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_voice"
            android:background="@drawable/selector_btn_void"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        
        <SeekBar
            android:id="@+id/sb_seekbar"
            style="@android:style/Widget.SeekBar"
            android:thumb="@mipmap/seekbar_thumb"
            android:minHeight="5dp"
            android:maxHeight="5dp"
            android:progressDrawable="@drawable/video_play_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>